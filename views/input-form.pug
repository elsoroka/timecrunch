- var dept_list = ['', 'AC ENG', 'ARABIC', 'MATH','IN4MATX'];
mixin select_dept 
    label(for='dept_names') Department Name:
    select#dept_names.form-control(name='dept_names' )
      each dept in dept_list
        option(value=dept) #{dept}



p.heatmap-title Select Demographic(s):

form(method='POST' action='')
  div.form-group
    +select_dept
    +select_dept
    +select_dept
    +select_dept
  button.btn.btn-primary(type='submit') Submit

if errors
  ul
    for error in errors
      li!= error.msg
